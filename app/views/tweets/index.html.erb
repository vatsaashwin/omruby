<div class="container">

  <div class="row">
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Hello!</h5>
          <!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> -->
          <p class="card-text"><%= current_user.email %></p>
          <!-- <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a> -->
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <% if user_signed_in? %>
        <%= link_to 'New Tweet', new_tweet_path %>
      <% end %>

      <ul class="list-group">
          <% @tweets.each do |tweet| %>
              <%= link_to tweet, class:"list-group-item list-group-item-action" do %>
                <h5 class="list-group-item-heading"><%= tweet.user.email %></h5>
                <p class="list-group-item-text"><%= tweet.content %></p>

                  <% if tweet.user == current_user %> 
                    <%= link_to 'Update', edit_tweet_path(tweet) %>
                    <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                
              <% end %>
          <% end %>
      </ul>
    </div>
  </div>
</div>
