<div class="container">
  <h1>Events</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Eventkey</th>
        <th>Event</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.user.email  %></td>
          <td><%= event.event %></td>
          <td><%= event.description %></td>
          <td><%= link_to 'Show', event %></td>
          <% if event.user == current_user %> 
            <td><%= link_to 'Update', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Event', new_event_path %>
  <% end %>
</div>